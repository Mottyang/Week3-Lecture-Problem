public class HouseBuilding {
    public static int getMinimum(String[] area){
/*          double Average = Arrays.stream(area)
                                .mapToInt(Integer::parseInt)
                                .average()
                                .orElse(0);
         int FloorAverage = (int)Math.floor(Average);
         int CeilAverage = (int)Math.ceil(Average);
         effort += Math.min((Math.abs(digit - FloorAverage)),(Math.abs(digit - CeilAverage)));
*/
         int[] intarea = new int[area.length];
         int digit = 0, sum = 0;
         int effort = 0;
         int count = 0;
         for(int i = 0; i < area.length; i++){
            intarea[i] = Integer.parseInt(area[i]);
         }
         for(int num : intarea){           
            while(num > 0){
                digit = num % 10;
                sum += digit;
                num /= 10;
                count++;               
            }
         }
        double Average = (int) sum / count;
        int FloorAverage = (int)Math.floor(Average);
        int CeilAverage = (int)Math.ceil(Average);
        digit = 0;
        for(int num : intarea){           
            while(num > 0){
                digit = num % 10;
                num /= 10;
                effort += Math.min((Math.abs(digit - FloorAverage)),(Math.abs(digit - CeilAverage)));             
            }
         }

         return effort;

    }

    public static void main(String[] args) {
        String[] area = {
            "54454",
            "61551"
        };
        int effort = getMinimum(area);
        System.out.println(effort);
    }
}
